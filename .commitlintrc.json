{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "build",
        "chore"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "introduction",
        "background",
        "tool",
        "concept",
        "implementation",
        "evaluation",
        "conclusion",
        "bibliography",
        "figures",
        "formatting",
        "appendix",
        "vc",
        "infra"
      ]
    ],
    "type-case": [2, "always", "lower-case"],
    "scope-case": [2, "always", "lower-case"],
    "subject-case": [2, "never", ["sentence-case", "start-case", "pascal-case", "upper-case"]],
    "subject-empty": [2, "never"],
    "type-empty": [2, "never"],
    "scope-empty": [2, "never"],
    "header-max-length": [2, "always", 72]
  }
}
